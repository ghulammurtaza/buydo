    </adminhtml>

    <frontend>
        <routers>
            <galavineyardsettings>
                <use>standard</use>
                <args>
                    <module>Gala_Galavineyardsettings</module>
                    <frontName>galavineyardsettings</frontName>
                </args>
            </galavineyardsettings>
        </routers>
        <layout>
            <updates>
                <galavineyardsettings>
                    <file>galavineyardsettings.xml</file>
                </galavineyardsettings>
            </updates>
        </layout>
		<events>
			<controller_action_layout_generate_xml_before>
                <observers>
                    <galavineyardsettings_change_layout>
                        <type>singleton</type>
                        <class>Gala_Galavineyardsettings_Model_Observer</class>
                        <method>changeLayoutEvent</method>
                    </galavineyardsettings_change_layout>
                </observers>
            </controller_action_layout_generate_xml_before>
    		<controller_action_layout_generate_blocks_before>
    			<observers>
    				<galavineyard_config_after_save>
    					<class>Gala_Galavineyardsettings_Model_Observer</class>
    					<method>beforeGenerateBlocks</method> 
    				</galavineyard_config_after_save>
    			</observers>
    		</controller_action_layout_generate_blocks_before>		
			<catalog_product_collection_load_before>
    			<observers>
    				<galavineyardsettings>
    					<class>Gala_Galavineyardsettings_Model_Observer</class>
    					<method>beforeCatalogProductCollectionLoad</method> 
    				</galavineyardsettings>
    			</observers>
    		</catalog_product_collection_load_before>
            <core_block_abstract_to_html_after>
				<observers>
					<designer>
						<class>galavineyardsettings/observer</class>
						<method>processAfterHtmlDispatch</method>
					</designer>
				</observers>
			</core_block_abstract_to_html_after>
    	</events>
    </frontend>
    <admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<galavineyardsettings before="Mage_Adminhtml">Gala_Galavineyardsettings_Adminhtml</galavineyardsettings>
					</modules>
				</args>
			</adminhtml>
            <galavineyardsettings>
				<use>admin</use>
                <args>
					<module>Gala_Galavineyardsettings</module>
					<frontName>galavineyardsettings_admin</frontName>
                </args>
            </galavineyardsettings>
            <cms>
                <args>
                    <modules>
                        <galavineyardsettings before="Mage_Cms">Gala_Galavineyardsettings</galavineyardsettings>
                    </modules>
                </args>
            </cms>
		</routers>
    </admin>
    <adminhtml>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Gala_Galavineyardsettings>
							<title>galavineyardsettings Module</title>
							<sort_order>10</sort_order>
						</Gala_Galavineyardsettings>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<galavineyardsettings>
					<file>galavineyardsettings.xml</file>
				</galavineyardsettings>
			</updates>
		</layout>
        <events>
    		<controller_action_postdispatch_adminhtml_system_config_save>
    			<observers>
    				<config_after_save>
    					<class>Gala_Galavineyardsettings_Model_Observer</class>
    					<method>afterConfigSave</method> 
    				</config_after_save>
    			</observers>
    		</controller_action_postdispatch_adminhtml_system_config_save>		
    	</events> 
    </adminhtml>
    
    <global>
        <blocks>
            <tag>
                <rewrite>
                    <popular>Gala_Galavineyardsettings_Block_Popular</popular>
                </rewrite>
            </tag>
        </blocks>
        <models>
            <galavineyardsettings>
                <class>Gala_Galavineyardsettings_Model</class>
                <resourceModel>galavineyardsettings_mysql4</resourceModel>
            </galavineyardsettings>
            <galavineyardsettings_mysql4>
                <class>Gala_Galavineyardsettings_Model_Mysql4</class>
                <entities>
                    <galavineyardsettings>
                        <table>galavineyardsettings</table>
                    </galavineyardsettings>
					<megamenupro>
                        <table>megamenupro</table>
                    </megamenupro>
					<slider>
                        <table>em_slideshow2_slider</table>
                    </slider>
                </entities>
            </galavineyardsettings_mysql4>
        </models>
        <resources>
            <galavineyardsettings_setup>
                <setup>
                    <module>Gala_Galavineyardsettings</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </galavineyardsettings_setup>
            <galavineyardsettings_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </galavineyardsettings_write>
            <galavineyardsettings_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </galavineyardsettings_read>
        </resources>
        <blocks>
            <galavineyardsettings>
                <class>Gala_Galavineyardsettings_Block</class>
            </galavineyardsettings>
        </blocks>
        <helpers>
            <galavineyardsettings>
                <class>Gala_Galavineyardsettings_Helper</class>
            </galavineyardsettings>
        </helpers>
        <default>
            <galavineyardsettings>
                <wysiwyg>
                    <enabled>enabled</enabled>
                </wysiwyg>
            </galavineyardsettings>
        </default>
    </global>
	<default>
		<galavineyard>
			<general>
				<main_menu>0</main_menu>
				<freezed_top_menu>0</freezed_top_menu>
				<disable_frontend_variation>1</disable_frontend_variation>
				<disable_footer_links>0</disable_footer_links>
                <disable_social>1</disable_social>
                <box_wide>wide</box_wide>
                <wideslide_full>1</wideslide_full>
                <page_bg_color></page_bg_color>
                <page_bg_file></page_bg_file>
                <page_bg_image></page_bg_image>                
                <page_bg_position></page_bg_position>
                <page_bg_repeat></page_bg_repeat>
			</general>
            <typography>
                <google_fonts>Open Sans</google_fonts>
                <google_fonts_weights>100,200,300,400,500,600,700,800,900,1000</google_fonts_weights>
				<general_font>normal 12px/1.35 Open Sans,Arial,Helvetica,sans-serif</general_font>
				<h1_font>normal 40px/1.15 Open Sans,Arial,Helvetica,sans-serif</h1_font>
				<h2_font>700 20px/1.25 Open Sans,Arial,Helvetica,sans-serif</h2_font>
				<h3_font></h3_font>
				<h4_font>700 16px/1.35 Open Sans,Arial,Helvetica,sans-serif</h4_font>
				<h5_font>700 14px/1.35 Open Sans,Arial,Helvetica,sans-serif</h5_font>
                <h6_font>700 12px/1.35 Open Sans,Arial,Helvetica,sans-serif</h6_font>
				<additional_css_file></additional_css_file>
                <custom_css></custom_css>
            </typography>
			<header>
                <head_text_color></head_text_color>
                <head_text2_color></head_text2_color>
				<head_text3_color></head_text3_color>
                <head_bg_color></head_bg_color>
                <head_bg2_color></head_bg2_color>
                <head_bg3_color></head_bg3_color>                
                <head_bg_image></head_bg_image>
                <head_bg_file></head_bg_file>
                <head_bg_position></head_bg_position>
                <head_bg_repeat></head_bg_repeat>
