            </menu>
            <body>
                <bd_bg_color></bd_bg_color>
                <bd_bg2_color></bd_bg2_color>
                <bd_bg3_color></bd_bg3_color>
                <bd_bg_image></bd_bg_image>
                <bd_bg_position></bd_bg_position>
                <bd_bg_repeat></bd_bg_repeat>
                
                <bd_text_color></bd_text_color>
                <bd_text2_color></bd_text2_color>
                <bd_text3_color></bd_text3_color>
                <bd_text4_color></bd_text4_color>
                
                <bd_line_color></bd_line_color>
                <bd_line2_color></bd_line2_color>
                
                <bd_box_shadow></bd_box_shadow>				
                <bd_rounded_corner></bd_rounded_corner>
            </body>            
            <footer>
                <foot_bg_color></foot_bg_color>
                <foot_bg_image></foot_bg_image>
                <foot_bg_position></foot_bg_position>
                <foot_bg_repeat></foot_bg_repeat>
                <foot_text_color></foot_text_color>
                <foot_text2_color></foot_text2_color>
                <foot_text3_color></foot_text3_color>
                <foot_line_color></foot_line_color>
                <foot_line2_color></foot_line2_color>
            </footer>
            <button>
                <btn1_bg_color></btn1_bg_color>
                <btn1_text_color></btn1_text_color>
                <btn1_line_color></btn1_line_color>
                <btn1_font>700 12px/1.35 Open Sans,Arial,Helvetica,sans-serif</btn1_font>
                <btn2_bg_color></btn2_bg_color>
                <btn2_text_color></btn2_text_color>
                <btn2_line_color></btn2_line_color>
                <btn2_font>700 14px/1.35 Open Sans,Arial,Helvetica,sans-serif</btn2_font>
            </button>
            <products_grid>
				<onecolumn>4</onecolumn>
				<twocolumns>3</twocolumns>
				<threecolumns>2</threecolumns>
            </products_grid>
            <products_list>
            </products_list>            
			<image_product>
				<viewmode></viewmode>
				<cloud_zoom_width></cloud_zoom_width>
				<cloud_zoom_height></cloud_zoom_height>
                <use_tabs>1</use_tabs>
			</image_product>
			<ajaxcart>
				<auto_close>0</auto_close>
			</ajaxcart>
            <flashtag>
                <enabled>0</enabled>
                <count>100</count>
                <back>#ffffff</back>
                <max>20</max>
                <min>12</min>
                <maxcolor>#000</maxcolor>
                <normal>#000</normal>
                <hover>#000</hover>
                <speed>1000</speed>
            </flashtag>
            <sidebar>
				<list>catalog_shopby,catalog_leftnav,catalog_search_layer,catalog_related,reorder_sidebar,wishlist_sidebar,compare,poll,popular_tags</list>
				<block_data>
                    <catalog_shopby>
						<type>layerednavigation/catalog_layer</type>
						<name>em.catalog.leftnav.custom</name>
						<template>em_layerednavigation/view.phtml</template>
						<before>-</before>
						<handles>catalog_category_layered</handles>
					</catalog_shopby>
                    <catalog_leftnav>
						<type>catalog/navigation</type>
						<name>catalog.leftnav</name>
						<template>catalog/navigation/left.phtml</template>
						<before>-</before>
						<handles>catalog_category_default</handles>
					</catalog_leftnav>
                    <catalog_search_layer>
						<type>layerednavigation/search_layer</type>
						<name>em.catalog.leftnav.custom</name>
						<template>em_layerednavigation/view.phtml</template>
						<before>-</before>
						<handles>catalogsearch_result_index</handles>
					</catalog_search_layer>
                    <catalog_related>
						<type>catalog/product_list_related</type>
						<name>catalog.product.related</name>
						<template>catalog/product/list/related.phtml</template>
						<before>-</before>
						<handles>catalog_product_view</handles>
					</catalog_related>
                    <reorder_sidebar>
						<type>sales/reorder_sidebar</type>
						<name>em.sale.reorder.sidebar</name>
						<as>reorder</as>
						<template>sales/reorder/sidebar.phtml</template>
						<handles>customer_account,customer_logged_in</handles>
					</reorder_sidebar>
                    <wishlist_sidebar>
						<type>wishlist/customer_sidebar</type>
						<name>wishlist_sidebar</name>
						<as>wishlist</as>
						<template>wishlist/sidebar.phtml</template>
					</wishlist_sidebar>                                                                                                    
                    <compare>
						<type>catalog/product_compare_sidebar</type>
						<name>catalog.compare.sidebar</name>
						<template>catalog/product/compare/sidebar.phtml</template>
						<after>galavineyard_sidebar_recent_review</after>
					</compare>
                    <poll>
						<type>poll/activePoll</type>
						<name>poll_sidebar</name>
						<action>method:setPollTemplate?template:poll/active.phtml,type:poll|method:setPollTemplate?template:poll/result.phtml,type:results</action>
                        <after>catalog.compare.sidebar</after>                        
					</poll>                                                        
					<popular_tags>
						<type>tag/popular</type>
						<name>tags_popular</name>
						<template>tag/popular.phtml</template>
						<after>right.poll</after>                     
					</popular_tags>
				</block_data>
			</sidebar>
			<position>
				<popular_tags>left</popular_tags>
				<poll>left</poll>
				<compare>left</compare>
				<catalog_shopby>left</catalog_shopby>
				<catalog_leftnav>left</catalog_leftnav>
				<catalog_search_layer>left</catalog_search_layer>
				<catalog_related>left</catalog_related>
				<wishlist_sidebar>left</wishlist_sidebar>
				<reorder_sidebar>left</reorder_sidebar>
				<customer_account_navigation>left</customer_account_navigation>
			</position>
		</galavineyard>
	</default>
</config>